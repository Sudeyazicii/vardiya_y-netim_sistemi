# app/controllers/api/v1/auth_controller.rb
module Api
  module V1
    class AuthController < ApplicationController
      # ðŸ”¹ JWT doÄŸrulamasÄ± login iÃ§in gerekli deÄŸil
      skip_before_action :authenticate_request, only: [:login]

      def login
        calisan = Calisan.find_by(email: params[:email])
        if calisan&.authenticate(params[:password])
          token = JsonWebToken.encode(calisan_id: calisan.id)
          render json: { token: token, calisan: calisan.as_json(except: [:password_digest]) }, status: :ok
        else
          render json: { error: "Email veya ÅŸifre hatalÄ±" }, status: :unauthorized
        end
      end
    end
  end
end
